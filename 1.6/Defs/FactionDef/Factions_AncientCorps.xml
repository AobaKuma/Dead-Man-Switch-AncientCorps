          <DMS_Mech_Tsvetnik>1</DMS_Mech_Tsvetnik>
        </options>
      </li>
      <li>
        <!-- heavy only -->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <DMS_Mech_Zabor>1</DMS_Mech_Zabor>
          <DMS_Mech_Zabor_Shkatulka>2</DMS_Mech_Zabor_Shkatulka>
