<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!-- Boss召喚器 -->
  <ThingDef ParentName="ResourceBase" Name="DMSAC_SiteIntel" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <tickerType>Normal</tickerType>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <stackLimit>1</stackLimit>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.2</Mass>
      <DeteriorationRate>2.0</DeteriorationRate>
      <Flammability>0.2</Flammability>
      <MarketValue>1000</MarketValue>
    </statBases>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>RewardStandardCore</li>
    </thingSetMakerTags>
    <tradeability>Buyable</tradeability>
    <comps>
      <li Class="CompProperties_UseEffectDestroySelf">
        <delayTicks>120</delayTicks>
        <spawnKilledLeavings>false</spawnKilledLeavings>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="DMSAC_SiteIntel"> 
    <defName>DMS_FacilityIntel</defName>
    <label>facility intel</label>
    <description>A intel map about the location of a military facility.</description>
    <graphicData>
      <texPath>Things/Resource/EncryptedTransmitter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>  
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Analyzing facility intel</useLabel>
        <useDuration>900</useDuration>
        <floatMenuFactionIcon>DMS_AncientCorps</floatMenuFactionIcon>
      </li>
      <li Class="CompProperties_UseEffectGiveQuest">
        <quest>DMSAC_OpportunitySite_Graveyard</quest>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="DMSAC_SiteIntel"> 
    <defName>DMS_SiteIntel</defName>
    <label>site intel</label>
    <description>A intel map about the location of a small military site.</description>
    <graphicData>
      <texPath>Things/Resource/EncryptedTransmitter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>  
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Analyzing facility intel</useLabel>
        <useDuration>900</useDuration>
        <floatMenuFactionIcon>DMS_AncientCorps</floatMenuFactionIcon>
      </li>
      <li Class="CompProperties_UseEffectGiveQuest">
        <quest>DMSAC_OpportunitySite_LogisticTerminal</quest>
      </li>
    </comps>
  </ThingDef>
</Defs>